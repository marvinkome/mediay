// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String         @id @default(cuid())
  email      String         @unique
  supabaseId String         @unique
  fullName   String?
  groups     GroupMember[]
  requests   GroupRequest[]
  services   ServiceUser[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Group {
  id       String    @id @default(cuid())
  name     String
  notes    String?
  services Service[]

  members  GroupMember[]
  requests GroupRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model GroupMember {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  isAdmin Boolean

  @@id([userId, groupId])
}

model GroupRequest {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  @@id([userId, groupId], name: "id")
}

model Service {
  id             String        @id @default(cuid())
  name           String
  cost           Float
  numberOfPeople Int
  instructions   String
  group          Group?        @relation(fields: [groupId], references: [id])
  groupId        String?
  users          ServiceUser[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model ServiceUser {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  service   Service @relation(fields: [serviceId], references: [id])
  serviceId String

  isCreator Boolean

  @@id([userId, serviceId])
}
